package lesson13;

public class Circle extends Shape{
    private int r;

    public Circle(int r) {
        this.r = r;
    }

    public int getR() {
        return r;
    }

    public void setR(int r) {
        this.r = r;
    }

    public double getPerimeter(){
        return 2*Math.PI*r;
    }

    public double getArea(){
        return Math.PI*Math.pow(r,2);
    }


}
